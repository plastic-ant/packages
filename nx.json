{
  "defaultBase": "main",
  "useLegacyCache": false,
  "cli": {
    "packageManager": "pnpm"
  },
  "defaultProject": "none!",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.base.json"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/vite.config.*",
      "!{projectRoot}/vitest.config.*",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/eslint.config.*",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.cjs"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.app.json"
        }
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "testTargetName": "test"
      }
    },
    // {
    //   "plugin": "@nx/eslint/plugin",
    //   "options": {
    //     "targetName": "lint"
    //   }
    // },
    "./packages/nx-cdk/src/index.ts",
    "./packages/nx-cdktf/src/index.ts",
    "./packages/nx-strapi/src/index.ts",
    "./packages/nx-msbuild/src/index.ts"
  ],
  "targetDefaults": {
    "prebuild": {
      "cache": true,
      "dependsOn": ["^prebuild"],
      "inputs": ["production", "^production"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["prebuild", "^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/js:tsc": {
      "dependsOn": ["prebuild", "^build"],
      "cache": true,
      "executor": "@nx/js:tsc",
      "inputs": ["production", "^production"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "generatePackageJson": false,
        "outputPath": "{projectRoot}/dist",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "main": "{projectRoot}/src/index.ts"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "inputs": [
        "default",
        "{workspaceRoot}/tools/eslint-rules/**/*",
        "{workspaceRoot}/eslint.config.[m]js",
        "{projectRoot}/eslint.config.[m]js"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "command": "eslint . --quiet=false"
      },
      "cache": true,
      "configurations": {
        "ci": {
          "command": "eslint . --quiet=true"
        }
      }
    },
    "test": {
      "dependsOn": ["prebuild"],
      "options": {
        "args": ["--passWithNoTests"]
      },
      "configurations": {
        "ci": {
          "args": ["--coverage", "--passWithNoTests"]
        }
      }
    }
  }
}
