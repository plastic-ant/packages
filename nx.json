{
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "defaultBase": "main",
  "cli": {
    "packageManager": "yarn"
  },
  "defaultProject": "none!",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.base.json"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json"
    ]
  },
  // "release": {
  //   "projects": ["packages/*"],
  //   "projectsRelationship": "independent",
  //   "releaseTagPattern": "{projectName}@{version}",
  //   "changelog": {
  //     "projectChangelogs": {
  //       "createRelease": "github"
  //     }
  //   },
  //   "version": {
  //     "conventionalCommits": true,
  //     "git": {
  //       "tag": true,
  //       "commit": true,
  //       "commitMessage": "chore({projectName}): release {version} [skip-ci]"
  //     }
  //   }
  // },
  "plugins": [
    {
      "plugin": "@plastic-ant/nx-cdk",
      "exclude": ["nx-cdk"]
    },
    {
      "plugin": "@plastic-ant/nx-cdktf",
      "exclude": ["nx-cdktf"]
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/rollup/plugin",
      "options": {
        "buildTargetName": "build"
      }
    }
  ],
  "targetDefaults": {
    // "nx-release-publish": {
    //   "options": {
    //     "packageRoot": "dist/packages/{projectName}"
    //   }
    // },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "buildTarget": "build",
        "distFolderPath": "dist/packages/{projectName}",
        "access": "public"
      }
    },
    "prebuild": {
      "cache": true,
      "dependsOn": ["^prebuild"],
      "inputs": ["production", "^production"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["prebuild", "^build"],
      "inputs": ["production", "^production"]
    },
    "lint": {
      "dependsOn": ["prebuild"],
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/tools/eslint-rules/**/*",
        "{workspaceRoot}/tools/eslint-rules/**/*"
      ],
      "cache": true,
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,jsx,mjs,cjs,js,svelte}", "{projectRoot}/**/*.json"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/.eslintignore"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@jscutlery/semver:version": {
      "options": {
        "preset": "conventionalcommits",
        "push": true,
        "tagPrefix": "{projectName}@"
      }
    }
  }
}
