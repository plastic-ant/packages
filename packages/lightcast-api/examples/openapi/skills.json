{
  "openapi": "3.0.2",
  "info": { "title": "API Title", "version": "1.0" },
  "servers": [{ "url": "https://emsiservices.com/skills" }],
  "paths": {
    "/status": {
      "get": {
        "operationId": "status",
        "description": "Health check endpoint",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["data"],
                  "properties": {
                    "data": {
                      "type": "object",
                      "required": ["healthy", "message"],
                      "properties": {
                        "healthy": { "type": "boolean" },
                        "message": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/meta": {
      "get": {
        "operationId": "meta",
        "description": "Get service metadata, including latest version, and attribution text. Caching is encouraged, but the metadata can change weekly.",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["data"],
                  "properties": {
                    "data": {
                      "type": "object",
                      "required": ["attribution"],
                      "properties": {
                        "attribution": {
                          "type": "object",
                          "required": ["title", "body", "latestVersion"],
                          "properties": {
                            "title": { "type": "string" },
                            "body": { "type": "string" },
                            "latestVersion": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/versions": {
      "get": {
        "operationId": "versions",
        "description": "Version latest can be used as an alias to the latest skill version. See our Skills Taxonomy Changelog for the updates in each version.",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["data"],
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
