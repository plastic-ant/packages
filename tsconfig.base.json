      "@plastic-ant/nx-cdktf": ["packages/nx-cdktf/src/index.ts"],
      "@plastic-ant/nx-sveltekit": ["packages/nx-sveltekit/src/index.ts"],
      "lightcast-api": ["packages/lightcast-api/src/index.ts"],
      "nx-cdk": ["packages/nx-cdk/src/index.ts"],
      "nx-cdktf": ["packages/nx-cdktf/src/index.ts"],
      "nx-sveltekit": ["packages/nx-sveltekit/src/index.ts"]
